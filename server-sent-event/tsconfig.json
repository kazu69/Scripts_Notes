
{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "app",
    "rootDir": "src",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "pretty": true,
    "lib": ["es2017"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": false
}
